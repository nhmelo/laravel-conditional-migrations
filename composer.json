{
    "name": "mll-lab/laravel-conditional-migrations",
    "description": "Run your Laravel migrations only when you want them to",
    "keywords": [
        "laravel",
        "migrations",
        "database",
        "php"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Sven Luijten",
            "email": "svenluijten1995@gmail.com",
            "homepage": "https://svenluijten.com"
        },
        {
            "name": "Thomas Moors",
            "email": "thomas.moors@medpets.nl"
        },
        {
            "name": "Benedikt Franke",
            "email": "benedikt@franke.tech"
        }
    ],
    "require": {
        "php": "^7.3 || ^8",
        "laravel/framework": "^6 || ^7 || ^8"
    },
    "require-dev": {
        "graham-campbell/testbench": "^5.3.1",
        "nunomaduro/larastan": "^0.5 || ^0.6"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "MLL\\ConditionalMigrations\\ServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "MLL\\ConditionalMigrations\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MLL\\ConditionalMigrations\\Tests\\": "tests/"
        },
        "classmap": [
            "tests/migrations"
        ]
    }
}
